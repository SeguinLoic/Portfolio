---
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';
import ShortProject from '../components/ShortProject.astro';

const pageTitle = "About Me";
const allPosts = Object.values(import.meta.glob('./projects/*.md', { eager: true }));
---

  <BaseLayout pageTitle={pageTitle}>
    <ul>
        {allPosts.map((post: any) => <ShortProject url={post.url} title={post.frontmatter.title} />)}
    </ul>
  </BaseLayout>