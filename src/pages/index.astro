---
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';
import TitleSection from '../components/TitleSection.astro';
import ShortBlogPost from '../components/ShortBlogPost.astro';

const pageTitle = "Home page";
const allPosts = Object.values(import.meta.glob('./posts/*.md', { eager: true }));
---

<style>
ul.listShortPost {
    border: 1px solid red;
    padding: 0px;
    list-style: none;
    margin: 0px;
}
</style>

<BaseLayout pageTitle={pageTitle}>
  <TitleSection title={"Latest projects"} />
  <TitleSection title={"My thougts"} />
  <ul class="listShortPost">
      {allPosts.map((post: any, index) => index < 3 && <ShortBlogPost url={post.url} title={post.frontmatter.title} date={post.frontmatter.pubDate} />)}
  </ul>
</BaseLayout>