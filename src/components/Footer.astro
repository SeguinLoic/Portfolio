---
import Social from './Social.astro';
---

<style>
  footer {
    display: flex;
    gap: 1rem;
    padding: 10px 0 30px;
    margin-top: 2rem;
  }
  footer .container {
    display: flex;
    width: 100%;
}
  footer .container .name {
    display: flex;
    margin: 0px;
    width: 100%;
  }
  footer .container .social {
    display: flex;
  }
</style>

<footer>
  <div class="container">
    <p class="name">© 2025 | Loïc Seguin</p>
    <div class="social">
      <Social platform="dribbble" username="Loic_Seguin" />
      <Social platform="github" username="SeguinLoic" />
    </div>
  </div>
</footer>