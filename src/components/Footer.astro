---
import Social from './Social.astro';
---

<style>
  footer {
    display: flex;
    gap: 1rem;
    padding: 20px 0px;
    margin-top: 2rem;
  }
  footer .container {
    display: flex;
    width: 100%;
}
  footer .container .name {
    display: flex;
    margin: 0px;
    width: 100%;
  }
  footer .container .social {
    display: flex;
  }
  .social {
      border: 1px solid blue;
  }
  .social a {
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0px 3px;
  }
  .social a img {
      width: 19px;
  }
</style>

