---
const {url, title, date} = Astro.props;
---

<style>
.shortPost {
    display: flex;
}
.shortPost a {
    display: flex;
    width: 100%;
    padding: 8px 10px;
    position: relative;
}
.shortPost a p {
    margin: 0px;
}
</style>

<li class="shortPost">
    <a href={url}>
        <p class="title">{title}</p>
        <p class="date">{date}</p>
    </a>
</li>