---
const {url, title, date, category} = Astro.props;
---

<style>
.shortPost {
    display: flex;
}
.shortPost a {
    display: flex;
    width: 100%;
    padding: 8px 10px;
    position: relative;
    color: #000;
    text-decoration: none;
}
.shortPost:not(:last-child) a:after {
    content: '';
    width: 100%;
    height: 1px;
    background-color: #000;
    opacity: 0.2;
    position: absolute;
    bottom: 0;
    left: 0;
}
.shortPost a:hover {
    text-decoration: underline !important;
}
.shortPost a .title {
    display: flex;
    flex-grow: 1;
    padding-left: 15px;
}
.shortPost a p {
    margin: 0px;
}
.shortPost .containerCategory {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    width: 95px;
}
.shortPost a .category {
    border: 1px solid #353535;
    font-size: 0.68em;
    padding: 2px 4px;
    border-radius: 3px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-transform: uppercase;
    line-height: 1em;
}
</style>

<li class="shortPost">
    <a href={url}>
        <div class="containerCategory">
            <p class="category">{category}</p>
        </div>
        <p class="title">{title}</p>
        <p class="date">{date}</p>
    </a>
</li>