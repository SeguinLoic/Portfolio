---
const {url, title, date, category} = Astro.props;
---

<style>
.shortPost {
    display: flex;
}
.shortPost a {
    display: flex;
    width: 100%;
    padding: 8px 10px;
    position: relative;
    color: #000;
    text-decoration: none;
}
.shortPost:not(:last-child) a:after {
    content: '';
    width: 100%;
    height: 1px;
    background-color: #000;
    opacity: 0.2;
    position: absolute;
    bottom: 0;
    left: 0;
}
.shortPost a:hover {
    text-decoration: underline !important;
}
.shortPost a .title {
    display: flex;
    flex-grow: 1;
}
.shortPost a p {
    margin: 0px;
}
</style>

<li class="shortPost">
    <a href={url}>
        <p class="category">{category}</p>
        <p class="title">{title}</p>
        <p class="date">{date}</p>
    </a>
</li>