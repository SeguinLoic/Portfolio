---
import Navigation from './Navigation.astro';
import Hamburger from './Hamburger.astro';
---
<header>
    <div class="Logo">
        <p>Lo√Øc S.</p>
    </div>
    <nav>
        <Hamburger />
        <Navigation />
    </nav>
</header>
<style>
header {
    display: flex;
    position: relative;
}
header:after {
    content: '';
    width: 100vW;
    height: 1px;
    position: absolute;
    background-color: rgba(0, 0, 0, 0.15);
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    pointer-events: none;
}
header nav {
    display: flex;
    flex-grow: 1;
    justify-content: flex-end;
}
.Logo {
    display: flex;
    align-items: center;
    padding: 0px 8px;
}
.Logo p {
    font-size: 20px;
    line-height: 1px;
    font-weight: 600;
    font-family: sans-serif;
}
</style>